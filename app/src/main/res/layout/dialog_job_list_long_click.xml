<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/screenPadding">

    <com.example.joblogger.customviews.BottomSheetListItem
        android:id="@+id/marAsNoAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_red_x"
        app:label="Mark As No" />

    <com.example.joblogger.customviews.BottomSheetListItem
        android:id="@+id/marAsYesAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_checkmark_green"
        app:label="Mark As Yes" />

    <com.example.joblogger.customviews.BottomSheetListItem
        android:id="@+id/marAsArchiveAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_old"
        app:label="Archive" />

    <com.example.joblogger.customviews.BottomSheetListItem
        android:id="@+id/marAsOnGoingAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_ongoing"
        app:label="Mark As No" />

    <com.example.joblogger.customviews.BottomSheetListItem
        android:id="@+id/deleteAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_garbage"
        app:label="Delete" />

</LinearLayout>